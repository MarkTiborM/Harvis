# Example secrets file for Harvis AI Helm Chart
# Copy this to secrets.yaml and fill in your actual secret values
#
# IMPORTANT: secrets.yaml should be added to .gitignore and never committed!
#
# Usage: helm upgrade --install harvis-ai . -f values.yaml -f secrets.yaml

# Backend JWT Secret - Use a cryptographically secure random string
# Generate with: openssl rand -hex 32
backend:
  env:
    JWT_SECRET: "your-secure-jwt-secret-here-32-chars-minimum"
    OLLAMA_API_KEY: "your-ollama-api-key-if-needed"
    OPENAI_API_KEY: "your-openai-api-key-if-needed"

# Frontend JWT Secret - MUST match backend JWT secret
frontend:
  env:
    JWT_SECRET: "your-secure-jwt-secret-here-32-chars-minimum"

# PostgreSQL Database Password
# Generate with: openssl rand -hex 16
postgresql:
  auth:
    password: "your-secure-postgres-password-here"

# n8n Authentication
# Generate with: openssl rand -hex 16
n8n:
  auth:
    basicAuthPassword: "your-secure-n8n-password-here"
  env:
    N8N_PERSONAL_API_KEY: "your-n8n-personal-api-key-if-needed"

# Example generation commands:
# JWT_SECRET=$(openssl rand -hex 32)
# POSTGRES_PASSWORD=$(openssl rand -hex 16)
# N8N_PASSWORD=$(openssl rand -hex 16)
#
# Then use:
# helm upgrade --install harvis-ai . -f values.yaml -f secrets.yaml --namespace ai-agents